{
  "compilerOptions": {
    "lib": ["ESNext"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "plugins": [{
      "name": "readable-test-for-types",
    }],
    "incremental": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./lib",
    "rt.config.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}