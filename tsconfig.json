{
  "compilerOptions": {
    "lib": ["ESNext"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmit": false,
    "noErrorTruncation": true,
    "incremental": true,
    "plugins": [{
      "name": "readable-types-plugin",
    }],
  },
  "include": [
    "./lib",
    "./plugins",
  ],
  "exclude": [
    "node_modules"
  ]
}